@model eleven.Models.ViewModels.MainPage

@{
    ViewBag.Title = "Highlights";
}

<h2>Highlights</h2>

@foreach (var item in Model.highlights)
{
    <div class="col align-self-center">
        <h4>
            @Html.DisplayFor(modelItem => item.title)
        </h4>
        <p>
            @Html.DisplayFor(modelItem => item.content)
        </p>
        <p>Written by: <span>@Html.DisplayFor(modelItem => item.author)</span></p>
    </div>
}