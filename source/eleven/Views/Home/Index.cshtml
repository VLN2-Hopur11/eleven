@model eleven.Models.ViewModels.MainPage

@{
    ViewBag.Title = "Home Page";
}

<h2>Highlights</h2>
<hr class="headline-bottom" align="left" width="30%" />
<section class="row">
    @foreach (var item in Model.highlights)
    {
        <div class="col align-self-center">
            <section class="col-sm-4">
                <section class="well">
                    <h4 style="font-weight: bold">
                        @Html.DisplayFor(modelItem => item.title)
                    </h4>
                    <p>
                        @Html.DisplayFor(modelItem => item.content)
                    </p>
                    <p style="bottom:0; position: absolute; margin-bottom: 30px;">Written by:<span>@Html.DisplayFor(modelitem => item.author)</span></p>
                </section>
            </section>
        </div>
    }
</section>

<h2>Picked Projects</h2>
<hr class="headline-bottom" align="left" width="30%" />
<section class="row">
    @foreach (var item in Model.pickedprojects)
    {
        <div class="col align-self-center">
            <section class="col-sm-4">
                <section class="well">
                    <h4>
                        @Html.DisplayFor(modelItem => item.title)
                    </h4>
                    <p>
                        @Html.DisplayFor(modelItem => item.content)
                    </p>
                </section>
            </section>
        </div>
    }
</section>